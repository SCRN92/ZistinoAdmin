<script>
    record = JSON.parse(localStorage.getItem("currentUser"));
    if (!record) {
        window.location = "/login";
    }

    userId = record.data.user._id;
    userEmail = record.data.user.email;
    image = record.data.user.image;
    name = record.data.user.name;
    userNotification = record.data.user.notification;
    document.getElementById('setting_user_name').innerHTML = record.data.user.name;
    var profile_img = image ? image : "default_image.jpg";
    document.getElementById('user_image').setAttribute('src', '/assets/images/profile_pictures/' +
        profile_img);
</script>