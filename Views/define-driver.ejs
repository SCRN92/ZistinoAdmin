<%- contentFor('HeaderCss') %>

    <!-- select2 css -->
    <link href="assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- dropzone css -->
    <link href="assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <%- contentFor('body') %>


        <!-- start page title -->
        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">افزودن راننده</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">اطلاعات پایه</h4>
                        <p class="card-title-desc">تمام قسمت های زیر را پر کنید.</p>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label for="drivername">نام</label>
                                        <input id="drivernameInput" name="drivername" type="text" class="form-control"
                                            placeholder="نام راننده را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverfamily">نام خانوادگی
                                        </label>
                                        <input id="driverfamilyInput" name="driverfamily" type="text"
                                            class="form-control" placeholder="  نام خانوادگی راننده را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverPhoneNumber">شماره تماس</label>
                                        <input id="driverPhoneNumberInput" name="driverPhoneNumber" type="text"
                                            class="form-control" placeholder="     شماره تماس راننده را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverAddress">آدرس</label>
                                        <textarea class="form-control" id="driverAddressInput" rows="1"
                                            placeholder="  آدرس کامل را در این قسمت وارد کنید."></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverUserName">نام کاربری</label>
                                        <input id="driverUserNameInput" name="driverUserName" type="text"
                                            class="form-control" placeholder="ایمیل راننده در این قسمت وارد شود.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverPass">کلمه عبور</label>
                                        <input id="driverPassInput" name="driverPass" type="text" class="form-control"
                                            placeholder="کلمه عبور را وارد کنید.">
                                    </div>
                                </div>

                                <div class="col-sm-6" style="direction: rtl;">
                                    <div class="mb-3">
                                        <label for="driverNationalCode">کد ملی</label>
                                        <input id="driverNationalCodeInput" name="driverNationalCode" type="text"
                                            class="form-control" placeholder="کد ملی راننده را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverDateOfBirth" class="form-label">تاریخ تولد</label>
                                        <input class="form-control" type="date" value="2019-08-19"
                                            id="driverDateOfBirthInput">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverNumberPlates">شماره پلاک</label>
                                        <input id="driverNumberPlatesInput" name="driverNumberPlates" type="text"
                                            class="form-control" placeholder="  شماره پلاک را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverCarModel">مدل ماشین</label>
                                        <input id="driverCarModelInput" name="driverCarModel" type="text"
                                            class="form-control" placeholder="مدل ماشین را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="driverDescription">توضیحات</label>
                                        <textarea class="form-control" id="driverDescriptionInput" rows="5"
                                            placeholder="   توضیحات تکمیلی را در این قسمت وارد کنید."></textarea>
                                    </div>

                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <button data-bs-toggle="modal" data-bs-target="#myModal" type="button"
                                    onclick="addDriver()" class="btn btn-primary waves-effect waves-light">افزودن
                                    راننده</button>
                                <div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel"
                                    aria-hidden="true" data-bs-scroll="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="myModalLabel">
                                                    موفق</h5>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="drivername" id="notifModal">اضافه شد.</label>

                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" onclick="refresh()"
                                                    data-bs-dismiss="modal">متوجه شدم</button>
                                            </div>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div>
                                <!-- <button type="reset" class="btn btn-secondary waves-effect waves-light">لغو</button> -->
                            </div>
                        </form>

                    </div>
                </div>
                <!-- end card-->
                </form>
                <div class="row" style="direction: rtl;">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0 font-size-18"> رانندگان ثبت شده</h4>
                        </div>
                    </div>
                </div>
                <div class="row" style="direction: rtl;">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-sm-4">
                                        <div class="search-box me-2 mb-2 d-inline-block">
                                            <div class="position-relative">
                                                <input type="text" class="form-control" placeholder="جستجو...">
                                                <i class="bx bx-search-alt search-icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end col-->
                            </div>

                            <div class="table-responsive">
                                <table class="table align-middle table-nowrap table-check">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="align-middle">ردیف </th>
                                            <!-- <th class="align-middle">شناسه </th> -->
                                            <th class="align-middle">نام </th>
                                            <th class="align-middle"> نام خانوادگی </th>
                                            <th class="align-middle">شماره تماس </th>
                                            <th class="align-middle">آدرس </th>
                                            <th class="align-middle">نام کاربری </th>
                                            <th class="align-middle">کلمه عبور </th>
                                            <th class="align-middle">کدملی </th>
                                            <th class="align-middle">تاریخ تولد</th>
                                            <th class="align-middle">شماره پلاک </th>
                                            <th class="align-middle">مدل ماشین </th>
                                            <th class="align-middle">توضیحات </th>
                                            <th class="align-middle">عملیات </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0 ; i < list.length ; i++){ %>
                                            <tr>
                                                <td>
                                                    <%=i+1%>
                                                </td>
                                                <td>
                                                    <%=list[i].name %>
                                                </td>
                                                <td>
                                                    <%=list[i].family %>
                                                </td>
                                                <td>
                                                    <%=list[i].phoneNumber %>
                                                </td>
                                                <td>
                                                    <%=list[i].address %>
                                                </td>
                                                <td>
                                                    <%=list[i].userName %>
                                                </td>
                                                <td>
                                                    <%=list[i].pass %>
                                                </td>
                                                <td>
                                                    <%=list[i].nationalCode %>
                                                </td>
                                                <td>
                                                    <%=list[i].dateOfBirth %>
                                                </td>
                                                <td>
                                                    <%=list[i].numberPlates %>
                                                </td>
                                                <td>
                                                    <%=list[i].carModel %>
                                                </td>
                                                <td>
                                                    <%=list[i].description %>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-3">
                                                        <a href="javascript:void(0);" class="text-success"><i
                                                                class="mdi mdi-pencil font-size-18"></i></a>
                                                        <a href="javascript:void(0);" class="text-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#myModal2<%=list[i]._id.toString()%>">
                                                            <i class="mdi mdi-delete font-size-18"></i></a>
                                                        <div id="myModal2<%=list[i]._id.toString()%>" class="modal fade"
                                                            tabindex="-1" aria-labelledby="myModalLabel"
                                                            aria-hidden="true" data-bs-scroll="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="myModalLabel">
                                                                            توجه</h5>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="mb-3">
                                                                            <label for="drivername">آیا از حذف اطمینان
                                                                                دارید؟</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-primary"
                                                                            onclick="deleteDriver('<%= list[i].name %>')"
                                                                            data-bs-toggle="modal" data-bs-target="#myModal"
                                                                            data-bs-dismiss="modal">بله</button>
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">خیر</button>
                                                                    </div>
                                                                </div>
                                                            </div><!-- /.modal-content -->
                                                        </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <ul class="pagination pagination-rounded justify-content-end mb-2">
                                <li class="page-item disabled">
                                    <a class="page-link" href="javascript: void(0);" aria-label="Previous">
                                        <i class="mdi mdi-chevron-left"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="javascript: void(0);">1</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="javascript: void(0);" aria-label="Next">
                                        <i class="mdi mdi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            var givenId = "none";
            function addDriver() {
                addItem(["drivernameInput",
                    "driverfamilyInput",
                    "driverPhoneNumberInput",
                    "driverAddressInput",
                    "driverUserNameInput",
                    "driverPassInput",
                    "driverNationalCodeInput",
                    "driverDateOfBirthInput",
                    "driverNumberPlatesInput",
                    "driverCarModelInput",
                    "driverDescriptionInput"], [
                    "name", "family", "phoneNumber", "address", "userName", "pass", "nationalCode", "dateOfBirth", "numberPlates", "carModel", "description"
                ], givenId, '/define-driver/newDriver')
                givenId = ""
            }

            function updateDriver(id, nameTxt, familyTxt, phoneNumberTxt, addressTxt, userNameTxt, passTxt, nationalCodeTxt, dateOfBirthTxt, numberPlatesTxt, carModelTxt, descriptionTxt) {
                givenId = id;
                var name = document.getElementById("drivernameInput");
                var family = document.getElementById("driverfamilyInput");
                var phoneNumber = document.getElementById("driverPhoneNumberInput");
                var address = document.getElementById("driverAddressInput");
                var userName = document.getElementById("driverUserNameInput");
                var pass = document.getElementById("driverPassInput");
                var nationalCode = document.getElementById("driverNationalCodeInput");
                var dateOfBirth = document.getElementById("driverDateOfBirthInput");
                var numberPlates = document.getElementById("driverNumberPlatesInput");
                var carModel = document.getElementById("driverCarModelInput");
                var description = document.getElementById("driverDescriptionInput");

                name.value = nameTxt;
                family.value = familyTxt;
                phoneNumber.value = phoneNumber;
                address.value = addressTxt;
                userName.value = userNameTxt;
                pass.value = passTxt;
                nationalCode.value = nationalCodeTxt;
                dateOfBirth.value = dateOfBirthTxt;
                numberPlates.value = numberPlatesTxt;
                carModel.value = carModelTxt;
                description.value = descriptionTxt;

                btn.innerText = "به روز رسانی"
            }
            function deleteDriver(id) {
                deleteItem(id, "/define-driver/deleteDriver");
            }
        </script>
        <!-- end row -->
        <%- contentFor('FooterJs') %>
            <script src="assets/libs/select2/js/select2.min.js"></script>

            <!-- dropzone plugin -->
            <script src="assets/libs/dropzone/min/dropzone.min.js"></script>

            <!-- init js -->
            <script src="assets/js/pages/ecommerce-select2.init.js"></script>