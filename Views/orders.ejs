<%- contentFor('HeaderCss') %>
    <%- contentFor('body') %>
        <!-- start page title -->
        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">سفارشات</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->
        <div class="row" style="direction: rtl;">
            <div class="col-lg-2" hidden>
                <div class="card">
                    <div class="card-body">
                        <h4 class="font-size-14 mb-3">فیلتر</h4>
                        <div>
                            <h5 class="font-size-14 mb-3">وضعیت</h5>
                            <ul class="list-unstyled product-list">
                                <li style="direction: ltr;"><a href="javascript: void(0);"><i
                                            class="mdi mdi-chevron-left me-1"></i>
                                        تایید شده</a></li>
                                <li style="direction: ltr;"><a href="javascript: void(0);"><i
                                            class="mdi mdi-chevron-left me-1"></i>
                                        تایید نشده</a></li>
                            </ul>
                        </div>
                        <div>
                            <h5 class="font-size-14 mb-3">رانندگان</h5>
                            <ul class="list-unstyled product-list">
                                <li style="direction: ltr;"><a href="javascript: void(0);"><i
                                            class="mdi mdi-chevron-left me-1"></i>
                                        راننده1</a></li>
                                <li style="direction: ltr;"><a href="javascript: void(0);"><i
                                            class="mdi mdi-chevron-left me-1"></i>
                                        راننده2</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">سفارشات</h4>
                        <div class="table-responsive">
                            <table class="table table-nowrap align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 20px;" class="align-middle">
                                            ردیف
                                        </th>
                                        <!--  <th class="align-middle">شناسه درخواست</th> -->
                                        <th class="align-middle">نام ونام خانوادگی</th>
                                        <th class="align-middle">آدرس</th>
                                        <th class="align-middle">شماره تماس</th>
                                        <th class="align-middle">میزان بار</th>
                                        <th class="align-middle">دسته بندی</th>
                                        <th class="align-middle">راننده</th>
                                        <th class="align-middle">بازه زمانی</th>
                                        <th class="align-middle">وضعیت</th>
                                        <th class="align-middle">توضیحات</th>
                                        <th class="align-middle">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0 ; i < list.length ; i++){ %>
                                        <tr>
                                            <td>
                                                <%=i+1%>
                                            </td>

                                            <td>
                                                <%=list[i].fullName %>
                                            </td>
                                            <td>
                                                <%=list[i].address %>
                                            </td>
                                            <td>
                                                <%=list[i].phoneNumber %>
                                            </td>
                                            <td>
                                                <%=list[i].amountOfLoad %>
                                            </td>
                                            <td>
                                                <%=list[i].category %>
                                            </td>
                                            <td>
                                                <div class="flex-shrink-0">
                                                    <div class="dropdown chat-noti-dropdown">
                                                        <label class="control-label">
                                                            <%=list[i].driver %>
                                                        </label>
                                                        <button class="btn dropdown-toggle p-0" type="button"
                                                            data-bs-toggle="dropdown" aria-haspopup="true"
                                                            aria-expanded="false">
                                                            <i class="mdi mdi-pencil font-size-18"></i>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <% for(let d=0 ; d< drivers.length; d++){%>
                                                                <a class="dropdown-item" href="#">
                                                                    <%=drivers[d].name%>
                                                                </a>
                                                                <%}%>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <%=list[i].timeRange %>
                                            </td>
                                            <td>
                                                <%if(list[i].status==0){%>
                                                    در انتظار پذیرش
                                                    <%}else if(list[i].status==1){%>
                                                        پذیرفته شده
                                                        <%}else if(list[i].status==2){%>
                                                            انجام شده
                                                            <%}%>
                                            </td>
                                            <td>
                                                <%=list[i].description %>
                                            </td>

                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>

            <!-- end col -->
        </div>

        <!-- end row -->
        <%- contentFor('FooterJs') %>
            <!-- apexcharts -->
            <script src="assets/libs/apexcharts/apexcharts.min.js"></script>

            <script src="assets/js/pages/tasklist.init.js"></script>