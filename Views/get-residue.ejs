<%- contentFor('HeaderCss') %>

    <!-- select2 css -->
    <link href="assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- dropzone css -->
    <link href="assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <%- contentFor('body') %>


        <!-- start page title -->
        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">ثبت دریافتی پسماند از راننده</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">اطلاعات پایه</h4>
                        <p class="card-title-desc">تمام قسمت های زیر را پر کنید.</p>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label for="wasteReceivedFullNameDriver">نام و نام خانوادگی راننده</label>
                                        <input id="wasteReceivedFullNameDriverInput" name="wasteReceivedFullNameDriver"
                                            type="text" class="form-control"
                                            placeholder="نام و نام خانوادگی راننده مورد نظر را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="wasteReceivedFullNameCustomer">نام و نام خانوادگی مشتری</label>
                                        <input id="wasteReceivedFullNameCustomerInput"
                                            name="wasteReceivedFullNameCustomer" type="text" class="form-control"
                                            placeholder=" نام و نام خانوادگی مشتری مورد نظر را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="wasteReceivedWeight">وزن</label>
                                        <input id="wasteReceivedWeightInput" name="wasteReceivedPrice" type="text"
                                            class="form-control" placeholder="کیلوگرم">

                                    </div>
                                </div>

                                <div class="col-sm-6" style="direction: rtl;">
                                    <div class="mb-3">
                                        <label class="wasteReceivedCategory"> دسته بندی دریافتی</label>
                                        <select class="form-control select2" id="wasteReceivedCategoryInput">
                                            <option>انتخاب</option>
                                            <% for(let i=0 ; i < categories.length ; i++){ %>
                                                <option value="<%=categories[i].price%>">
                                                    <%=categories[i].name%>
                                                </option>
                                                <%}%>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="wasteReceivedDescription">توضیحات دریافتی</label>
                                        <textarea class="form-control" id="wasteReceivedDescriptionInput" rows="3"
                                            placeholder="توضیحات تکمیلی پسماند دریافتی را در این قسمت وارد کنید."></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="wasteReceivedTotal">جمع کل</label>
                                        <input class="form-control" id="wasteReceivedTotal" disabled="true">
                                        </textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <button data-bs-toggle="modal" data-bs-target="#myModal" type="button"
                                    onclick="addGetResidue()" class="btn btn-primary waves-effect waves-light">ثبت
                                    دریافتی</button>
                                <div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel"
                                    aria-hidden="true" data-bs-scroll="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="myModalLabel">
                                                    موفق</h5>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="productname" id="notifModal">اضافه شد.</label>

                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" onclick="refresh()"
                                                    data-bs-dismiss="modal">متوجه شدم</button>
                                            </div>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div>
                                <!-- <button type="reset" class="btn btn-secondary waves-effect waves-light">لغو</button> -->
                            </div>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-->
            <div class="row" style="direction: rtl;">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18"> دریافتی های ثبت شده</h4>
                    </div>
                </div>
            </div>
            <div class="row" style="direction: rtl;">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <div class="search-box me-2 mb-2 d-inline-block">
                                        <div class="position-relative">
                                            <input type="text" class="form-control" placeholder="جستجو...">
                                            <i class="bx bx-search-alt search-icon"></i>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- end col-->
                        </div>
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-check">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 20px;" class="align-middle">
                                            ردیف
                                        </th>
                                        <!--  <th class="align-middle">شناسه دریافتی</th> -->
                                        <th class="align-middle">نام و نام خانوادگی راننده</th>
                                        <th class="align-middle">نام و نام خانوادگی مشتری</th>
                                        <th class="align-middle"> دسته بندی دریافتی</th>
                                        <th class="align-middle"> وزن(کیلوگرم)</th>
                                        <!-- <th class="align-middle">جمع کل</th> -->
                                        <th class="align-middle">توضیحات </th>
                                        <th class="align-middle">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i < list.length ; i++) { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>

                                            <td>
                                                <%= list[i].driver %>
                                            </td>
                                            <td>
                                                <%= list[i].customer %>
                                            </td>
                                            <td>
                                                <%= list[i].category %>
                                            </td>
                                            <td>
                                                <%= list[i].weight %> کیلوگرم
                                            </td>
                                            <!--  <td>
                                                <%= list[i].total %> 
                                            </td> -->
                                            <td>
                                                <%= list[i].description %>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-3">
                                                    <a href="javascript:updateGetResidue('<%=list[i]._id.toString()%>','<%=list[i].driver%>','<%=list[i].customer%>','<%=list[i].weight%>','<%=list[i].category%>','<%=list[i].description%>');" class="text-success"><i
                                                            class="mdi mdi-pencil font-size-18"></i></a>
                                                    <a href="javascript:void(0);" class="text-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#myModal2<%=list[i].driver%>">
                                                        <i class="mdi mdi-delete font-size-18"></i></a>
                                                    <div id="myModal2<%=list[i].driver%>" class="modal fade"
                                                        tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true"
                                                        data-bs-scroll="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="myModalLabel">
                                                                        توجه</h5>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="mb-3">
                                                                        <label for="productname">آیا از حذف اطمینان
                                                                            دارید؟</label>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-primary"
                                                                        onclick="deleteGetResidue('<%= list[i]._id.toString() %>')"
                                                                        data-bs-toggle="modal" data-bs-target="#myModal"
                                                                        data-bs-dismiss="modal">بله</button>
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">خیر</button>
                                                                </div>
                                                            </div>
                                                        </div><!-- /.modal-content -->
                                                    </div>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                        <ul class="pagination pagination-rounded justify-content-end mb-2">
                            <li class="page-item disabled">
                                <a class="page-link" href="javascript: void(0);" aria-label="Previous">
                                    <i class="mdi mdi-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="javascript: void(0);">1</a></li>
                            <li class="page-item">
                                <a class="page-link" href="javascript: void(0);" aria-label="Next">
                                    <i class="mdi mdi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <script>
            var givenId = "none";
            function addGetResidue() {
                addItem(["wasteReceivedFullNameDriverInput",
                "wasteReceivedFullNameCustomerInput",
                "wasteReceivedWeightInput",
                "wasteReceivedCategoryInput",
                "wasteReceivedDescriptionInput"],["driver","customer","weight","category","description"],
                givenId,"/get-residue/newWasteReceived")
                givenId = ''
            }
            function updateGetResidue(id,driverTxt,customerTxt,weightTxt,categoryTxt,descriptionTxt) {
                var driver = document.getElementById("wasteReceivedFullNameDriverInput");
                var customer = document.getElementById("wasteReceivedFullNameCustomerInput");
                var weight = document.getElementById("wasteReceivedWeightInput");
                var category = document.getElementById("wasteReceivedCategoryInput");
                var description = document.getElementById("wasteReceivedDescriptionInput");
            
                driver.value = driverTxt;
                customer.value = customerTxt;
                weight.value = weightTxt;
                category.value = categoryTxt;
                description.value = descriptionTxt;

                givenId = id;
            }
            function deleteGetResidue(id) {
                deleteItem(id,"/get-residue/deleteWasteReceived");
            }

        </script>
        <!-- end row -->
        <%- contentFor('FooterJs') %>
            <script src="assets/libs/select2/js/select2.min.js"></script>

            <!-- dropzone plugin -->
            <script src="assets/libs/dropzone/min/dropzone.min.js"></script>

            <!-- init js -->
            <script src="assets/js/pages/ecommerce-select2.init.js"></script>