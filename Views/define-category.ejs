<%- contentFor('HeaderCss') %>

    <!-- select2 css -->
    <link href="assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- dropzone css -->
    <link href="assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <%- contentFor('body') %>


        <!-- start page title -->
        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18"> افزودن دسته بندی </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row" style="direction: rtl;">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">اطلاعات پایه</h4>
                        <p class="card-title-desc">تمام قسمت های زیر را پر کنید.</p>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <label for="productname">نام دسته بندی</label>
                                        <input id="categorynameInput" name="categoryname" type="text"
                                            class="form-control" placeholder="نام مورد نظر را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="price">قیمت</label>
                                        <input id="priceInput" name="price" type="text" class="form-control"
                                            placeholder="قیمت به ازای هر کیلوگرم را وارد کنید.">
                                    </div>
                                </div>

                                <div class="col-sm-6" style="direction: rtl;">
                                    <div class="mb-3">
                                        <label for="inventory">حداقل</label>
                                        <input id="minInput" name="minInput" type="text" class="form-control"
                                            placeholder=" حداقل میزان دریافتی در این دسته را وارد کنید.">
                                    </div>
                                    <div class="mb-3">
                                        <label for="inventory">حداکثر</label>
                                        <input id="maxInput" name="maxInput" type="text" class="form-control"
                                            placeholder=" حداکثر میزان دریافتی در این دسته را وارد کنید.">
                                    </div>

                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <button data-bs-toggle="modal" data-bs-target="#myModal" id="addBtn" type="button"
                                    onclick="addCategory()"
                                    class="btn btn-primary waves-effect waves-light">افزودن</button>
                                <div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel"
                                    aria-hidden="true" data-bs-scroll="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="myModalLabel">
                                                    موفق</h5>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="productname" id="notifModal">
                                                        اضافه
                                                        شد.</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" onclick="refresh()"
                                                    data-bs-dismiss="modal">متوجه شدم</button>
                                            </div>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div>
                                <!-- <button type="reset" class="btn btn-secondary waves-effect waves-light">لغو</button> -->
                            </div>
                        </form>

                    </div>
                </div>
                <!-- end card-->
                </form>
                <div class="row" style="direction: rtl;">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0 font-size-18"> دسته بندی های ثبت شده</h4>
                        </div>
                    </div>
                </div>
                <div class="row" style="direction: rtl;">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-sm-4">
                                        <div class="search-box me-2 mb-2 d-inline-block">
                                            <div class="position-relative">
                                                <input type="text" class="form-control" placeholder="جستجو...">
                                                <i class="bx bx-search-alt search-icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end col-->
                            </div>

                            <div class="table-responsive">
                                <table class="table align-middle table-nowrap table-check">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 20px;" class="align-middle">
                                                ردیف
                                            </th>
                                            <!-- <th class="align-middle">شناسه دسته بندی</th> -->
                                            <th class="align-middle">نام دسته بندی</th>
                                            <th class="align-middle">قیمت</th>
                                            <th class="align-middle">حداقل(کیلوگرم)</th>
                                            <th class="align-middle">حداکثر(کیلوگرم)</th>
                                            <th class="align-middle">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0 ; i < list.length ; i++){ %>
                                            <tr>
                                                <td>
                                                    <div class="form-check font-size-16">
                                                        <%=i+1%>
                                                    </div>
                                                </td>
                                                <td>
                                                    <%=list[i].name %>
                                                </td>
                                                <td>
                                                    <%=list[i].price %> ریال
                                                </td>
                                                <td>
                                                    <%=list[i].min %>
                                                </td>
                                                <td>
                                                    <%=list[i].max %>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-3">
                                                        <a href="javascript:updateCategory('<%=list[i]._id.toString()%>','<%=list[i].name.toString()%>','<%=list[i].price.toString()%>','<%=list[i].min.toString()%>','<%=list[i].max.toString()%>');"
                                                            class="text-success"><i
                                                                class="mdi mdi-pencil font-size-18"></i></a>
                                                        <a href="javascript:void(0);" class="text-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#myModal<%=list[i]._id.toString()%>">
                                                            <i class="mdi mdi-delete font-size-18"></i></a>
                                                        <div id="myModal<%=list[i]._id.toString()%>" class="modal fade"
                                                            tabindex="-1" aria-labelledby="myModalLabel2"
                                                            aria-hidden="true" data-bs-scroll="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="myModalLabel2">
                                                                            توجه</h5>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="mb-3">
                                                                            <label for="productname">آیا از حذف اطمینان
                                                                                دارید؟</label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-primary"
                                                                            onclick="deleteCategory('<%= list[i]._id.toString() %>')"
                                                                            data-bs-toggle="modal" data-bs-target="#myModal"
                                                                            data-bs-dismiss="modal">بله</button>
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">خیر</button>
                                                                    </div>
                                                                </div>
                                                            </div><!-- /.modal-content -->
                                                        </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <ul class="pagination pagination-rounded justify-content-end mb-2">
                                <li class="page-item disabled">
                                    <a class="page-link" href="javascript: void(0);" aria-label="Previous">
                                        <i class="mdi mdi-chevron-left"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="javascript: void(0);">1</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="javascript: void(0);" aria-label="Next">
                                        <i class="mdi mdi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </div>
        <!-- end row -->
        <script>
            var givenId = 'none';
            function addCategory() {
                addItem(["categorynameInput", "priceInput", "minInput", "maxInput"],
                    ["name", "price", "min", "max"], givenId, "/define-category/newCategory")
                givenId = ""

            }
            function updateCategory(id, nameTxt, priceTxt, minTxt, maxTxt) {
                var name = document.getElementById("categorynameInput");
                var price = document.getElementById("priceInput");
                var min = document.getElementById("minInput");
                var max = document.getElementById("maxInput");

                givenId = id;

                name.value = nameTxt;
                price.value = priceTxt;
                min.value = minTxt;
                max.value = maxTxt;

                btn.innerText = "به روز رسانی"
            }
            function deleteCategory(id) {
                deleteItem(id, "/define-category/deleteCategory");
            }
        </script>
        <%- contentFor('FooterJs') %>
            <script src="assets/libs/select2/js/select2.min.js"></script>

            <!-- dropzone plugin -->
            <script src="assets/libs/dropzone/min/dropzone.min.js"></script>

            <!-- init js -->
            <script src="assets/js/pages/ecommerce-select2.init.js"></script>